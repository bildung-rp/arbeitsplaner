/* Custom CSS
-------------------------*/
div.logo {
    background: url([[setting:logo]]) no-repeat 0 0;
    display: block;
    float: left;
    height: 75px;
    margin: 0;
    padding: 0;
    width: 100%;
}

.dir-rtl div.logo {
    background: url([[setting:logo]]) no-repeat 100% 0;
    display: block;
    float: right;
}

/* Custom CSS Settings
-------------------------*/
[[setting:customcss]]
a {
  color: rgb(135, 29, 51);
}
a:hover {
  color: #000;
  text-decoration: none;
}           

.container-fluid {
  max-width: unset;
}

/* Blöcke */
#page-content.row-fluid aside .header{
  margin: 5px 10px 0px 10px;
  background-color: rgb(135, 29, 51);
}
#page-content.row-fluid aside .header h2{
  color: #fff;
  text-transform: none;
  text-shadow: none;
}

div #region-main-box div.row-fluid aside .content {
  margin: 0px 10px;
  background-color: rgb(248,248,248);
}

.block .header h2 {
 padding: 10px 15px;
} 
.block .header .block_action {
 padding: 10px 15px;
}

/* Logos */
#moodle_rlp {
  position: relative;
  float: right;
  right: 0px;
}

.breadcrumb-button {
    clear: right;
}
.breadcrumb-nav {
    clear: left;
}

/* Kurs suche */
#course_search {
  position: relative;
  float: left;
  left: 0px;
}

#course_search input {
  border-radius: unset;
  height: 15px;
}
#course_search button {
  margin: -10px 0px 0px -5px !important; 
  padding: 0px;
}

/* Boxen */
header .page-context-header {
  margin-top: 40px;
  overflow: unset;
}

.page-context-header .page-header-headings {
  margin: 0;
}

.block {
  background-color: #ebebeb;
}
.block .content {
  margin: 0px 10px;
  background-color: rgb(248,248,248);
}

.block_login .content {
  max-width: 100%;
}

/* Fußzeile */
footer {
  background: #d0d0d0;
  color: #333;
  float: left;
  left: 0px;
  width: 100%;
  font-size: 0.9em;
}
#page-footer .copyright {
    float: left;
    text-align: left;
    padding: 10px 0px 10px 20px;
}
#page-footer .logininfo {
    color: #363636;
    float: right;
    text-align: right;
    padding: 10px 20px 10px 30px;
    background: url([[pix:theme|loginicon]]) left no-repeat;    
}

/* Kursliste */
.course_category_tree .category > .info {
    border: 0;
    border-radius: 0;
    background-color: unset;
    border-image-width: 0;
    box-shadow: 0;
}
/*
.course_category_tree .category.with_children > .info > .categoryname a {
    color: rgb(135, 29, 51);
}
*/
.course_category_tree .category.with_children > .info > .categoryname a:hover {
    color: #000;
    text-decoration: none;
}
.courses .coursebox.collapsed {
    border: 0;
}
.courses .coursebox {
    border: 0;
    border-radius: 0;
}

/* Book */
.path-mod-book .navbottom, .path-mod-book .navtop {
  text-align: left;
}
.path-mod-book .navimages img {
  background-color: rgb(238, 238, 238);
  border: 1px outset rgb(170, 170, 170) !important;
  padding: 3px 6px !important
}
.path-mod-book .navimages a:hover img{
  background-color: rgb(242,242,242);
  border: 1px inset rgb(170, 170, 170) !important;
}

/* Usermenu Pic Fix */
img.userpicture {
  margin: -5px 10px 5px 0px;
}